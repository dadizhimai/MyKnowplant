<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myself"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_bac"
        android:id="@+id/myself_top">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/myself_pic"
            android:src="@mipmap/myself_pic"
            android:layout_alignParentTop="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="时光凉人心"
            android:textColor="#1758d0"
            android:layout_below="@+id/myself_pic"
            />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/myself_top"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myself_question"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myself_question"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:id="@+id/questioncount"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myself_back"
                android:layout_gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myself_answer"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myself_answer"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:id="@+id/answercount"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myself_back"
                android:layout_weight="1"
                android:id="@+id/imageView7" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myself_collect"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myself_collect"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/collectcount"
                android:textColor="#000000"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myself_back"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/about_bac"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_datebaselists"
            android:gravity="center"
            android:layout_weight="1"
            tools:ignore="NestedWeights,UseCompoundDrawables"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/main_datebase"
                android:contentDescription=""
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_datebase"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_plantlists"
            android:gravity="center"
            android:layout_weight="1"
            tools:ignore="UseCompoundDrawables"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/main_retrievallists"
                android:id="@+id/imageView"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_plantlists"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/main_retrivallists"
            android:layout_weight="1"
            tools:ignore="UseCompoundDrawables"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/main_retrievallist"
                android:id="@+id/imageView2"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_retrivallists"
                android:textColor="#000000"
                android:id="@+id/textView"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_myself"
            android:layout_weight="1"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/main_mine"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_myself"
                android:textSize="15dp"
                android:textColor="#000000"
                tools:ignore="SpUsage"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
